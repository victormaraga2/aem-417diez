<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="captacion_necesidadesformacionespecifica_list">
      <field name="name">Listado Necesidades Formación Especifica</field>
      <field name="model">captacion.necesidadesformacionespecifica</field>
      <field name="arch" type="xml">
        <tree string="Necesidades de formacion especifica">
          <field name="name"/>
          <field name="company_ids"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="captacion_necesidadesformacionespecifica_form">
      <field name="name">Formulario Necesidades Formación Especifica</field>
      <field name="model">captacion.necesidadesformacionespecifica</field>
      <field name="arch" type="xml">
        <form string="Necesidades de formacion especifica">
            <sheet>
              <group>
                  <field name="name"/>
                  <field name="company_ids"/>
              </group>
            </sheet>
        </form>
      </field>
    </record>

    <record model="ir.actions.act_window" id="captacion_action_necesidadesformacionespecifica">
      <field name="name">Necesidades Formación Especifica</field>
      <field name="res_model">captacion.necesidadesformacionespecifica</field>
      <field name="view_mode">tree,form</field>
    </record>

  </data>
</odoo>