<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="gusto.perfiles_participantes_list">
      <field name="name">perfiles_participantes</field>
      <field name="model">gusto.perfiles.participantes</field>
      <field name="arch" type="xml">
        <tree>
          <field name="participante_id"/>
          <field name="perfiles_id"/>

          
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="gusto.perfiles_participantes_form">
      <field name="name">perfiles_participantes</field>
      <field name="model">gusto.perfiles.participantes</field>
      <field name="arch" type="xml">
        <form>
            <sheet>
              <field name="participante_id"/>
              <field name="perfiles_id"/>

              
            </sheet>
        </form>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="gusto.action_perfiles_participantes">
      <field name="name">perfiles.participantes</field>
      <field name="res_model">gusto.perfiles.participantes</field>
      <field name="view_mode">tree,form</field>
    </record>


  </data>
</odoo>