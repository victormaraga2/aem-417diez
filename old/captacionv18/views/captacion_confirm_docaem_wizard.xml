<odoo>
    <data>
        <record id="view_confirm_docaem_wizard_form" model="ir.ui.view">  
            <field name="name">captacion.confirm.docaem.wizard.form</field>
            <field name="model">captacion.confirm.docaem.wizard</field>
            <field name="arch" type="xml">
                <form string="Confirmar Creación de Registros">
                    <group colspan="2">  <!-- Se agregó colspan="2" para mejor alineación -->
                        <!-- Se reemplazó <label> por <div> con clase o_form_label -->
                        <div class="o_form_label">
                            ¿Desea generar registros en captacion.docaem basados en los participantes seleccionados?
                        </div>
                    </group>
                    <footer>
                        <button string="Confirmar" type="object" name="confirm_creation" class="btn-primary"/>
                        <button string="Cancelar" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
