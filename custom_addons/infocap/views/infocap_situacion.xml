<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="infocap.situacion_list">
      <field name="name">situacion</field>
      <field name="model">infocap.situacion</field>
      <field name="arch" type="xml">
        <list>
          <field name="name"/>

          
        </list>
      </field>
    </record>

    <record model="ir.ui.view" id="infocap.situacion_form">
      <field name="name">situacion</field>
      <field name="model">infocap.situacion</field>
      <field name="arch" type="xml">
        <form>
            <sheet>
              <field name="name"/>

              
            </sheet>
        </form>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="infocap.action_situacion">
      <field name="name">situacion</field>
      <field name="res_model">infocap.situacion</field>
      <field name="view_mode">list,form</field>
    </record>


  </data>
</odoo>