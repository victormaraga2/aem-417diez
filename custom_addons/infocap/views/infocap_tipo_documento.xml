<odoo>
  <data>

    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="infocap.tipo_documento_list">
      <field name="name">Tipo documento</field>
      <field name="model">infocap.tipo.documento</field>
      <field name="arch" type="xml">
        <list>
          <field name="name"/>
        </list>
      </field>
    </record>

    <record model="ir.ui.view" id="infocap.tipo_documento_form">
      <field name="name">Tipo documento</field>
      <field name="model">infocap.tipo.documento</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="name"/>
              </group>
            </sheet>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="infocap.action_tipo_documento">
      <field name="name">Tipo documento</field>
      <field name="res_model">infocap.tipo.documento</field>
      <field name="view_mode">list,form</field>
    </record>
  </data>
</odoo>