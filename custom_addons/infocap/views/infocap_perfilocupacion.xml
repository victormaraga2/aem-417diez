<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="infocap.perfilocupacion_list">
      <field name="name">perfilocupacion</field>
      <field name="model">infocap.perfilocupacion</field>
      <field name="arch" type="xml">
        <list>
          <field name="name"/>
        </list>
      </field>
    </record>
    <record model="ir.ui.view" id="infocap.perfilocupacion_form">
      <field name="name">perfilocupacion</field>
      <field name="model">infocap.perfilocupacion</field>
      <field name="arch" type="xml">
        <form>
            <sheet>
              <field name="name"/>
            </sheet>
        </form>
      </field>
    </record>
    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="infocap.action_perfilocupacion">
      <field name="name">perfilocupacion</field>
      <field name="res_model">infocap.perfilocupacion</field>
      <field name="view_mode">list,form</field>
    </record>
  </data>
</odoo>